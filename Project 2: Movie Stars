CREATE TABLE awards(id INTEGER PRIMARY KEY AUTOINCREMENT, movie_star_id INTEGER, oscars INTEGER, nominations INTEGER, movies_acted_in INTEGER);

INSERT INTO awards(movie_star_id, oscars, nominations, movies_acted_in) VALUES (1,"1","7", "29");
